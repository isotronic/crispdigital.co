---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.tsx';
---

<Layout>
  <div class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {/* Hero Section */}
      <div class="text-center mb-16">
      <h1 class="text-5xl font-bold mb-6 text-crisp-green">Our Services</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        We offer comprehensive web and mobile development solutions to help your business thrive in the digital world.
      </p>
    </div>

    {/* Services Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
      <ServiceCard 
        client:load
        type="web-development"
        title="Web Development"
        description="Custom web applications built with modern technologies and frameworks. We create scalable, secure, and high-performance websites tailored to your business needs."
        features={[
          "Custom web application development",
          "Modern framework implementation (React, Vue, Angular)",
          "Database design and integration",
          "API development and integration",
          "Performance optimization"
        ]}
      />
      
      <ServiceCard 
        client:load
        type="web-design"
        title="Web Design"
        description="Beautiful, user-friendly designs that captivate your audience and drive conversions. Our design process focuses on user experience and modern aesthetics."
        features={[
          "Custom UI/UX design",
          "Responsive design for all devices",
          "Brand identity and logo design",
          "Interactive prototypes",
          "Design system creation"
        ]}
      />
      
      <ServiceCard 
        client:load
        type="mobile-app"
        title="React Native App Development"
        description="Cross-platform mobile applications built with React Native. One codebase for both iOS and Android, delivering faster development, lower costs, and consistent user experience across platforms."
        features={[
          "Single codebase for iOS and Android",
          "Faster development and lower costs",
          "Native performance and user experience",
          "Easy maintenance and updates",
          "App Store deployment and optimization"
        ]}
      />
      
      <ServiceCard 
        client:load
        type="maintenance"
        title="Maintenance"
        description="Ongoing support and maintenance to keep your website and applications running smoothly, secure, and up-to-date."
        features={[
          "Regular security updates and patches",
          "Performance monitoring and optimization",
          "Content updates and feature additions",
          "Backup and disaster recovery",
          "Technical support and troubleshooting"
        ]}
      />
      
      <ServiceCard 
        client:load
        type="wordpress"
        title="WordPress Development"
        description="Complete WordPress website solutions and ongoing management services to keep your site running smoothly and securely."
        features={[
          "Complete WordPress website development",
          "Business and e-commerce site setup",
          "WordPress maintenance and updates",
          "Security monitoring and backups",
          "Content management and site optimization"
        ]}
      />
    </div>

    {/* Call to Action */}
    <div class="text-center bg-gray-100 p-12 rounded-lg">
      <h2 class="text-3xl font-bold mb-4 text-crisp-green">Ready to Get Started?</h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Let's discuss your project and find the perfect solution for your business needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="px-8 py-3 rounded-lg font-medium text-lg transition-colors duration-200 bg-crisp-orange text-white hover:bg-crisp-orange/90">
          Contact Us
        </a>
        <a href="/portfolio" class="bg-white border-2 border-crisp-green px-8 py-3 rounded-lg font-medium text-lg transition-colors duration-200 text-crisp-green hover:bg-crisp-green hover:text-white">
          View Portfolio
        </a>
      </div>
    </div>
    </div>
  </div>
</Layout>
