---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.tsx';
import TechStackCarousel from '../components/TechStackCarousel.tsx';
---

<Layout title="Services - crispdigital">
  {/* Hero Section */}
  <div class="relative py-20 lg:py-32 overflow-hidden bg-gradient-to-br from-crisp-green to-crisp-green/90">
    {/* Background Image */}
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
        alt="Digital development workspace"
        class="w-full h-full object-cover opacity-20"
      />
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        {/* Hero Content */}
        <div class="text-center lg:text-left text-white">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">Our Services</h1>
          <p class="text-xl md:text-2xl opacity-90 mb-8">
            We offer comprehensive web and mobile development solutions to help your business thrive in the digital world.
          </p>
          <div class="flex justify-center lg:justify-start">
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20">
              <p class="text-lg font-medium">ðŸš€ Ready to transform your digital presence?</p>
            </div>
          </div>
        </div>
        
        {/* Hero Image */}
        <div class="relative">
          <div class="relative z-10">
            <img 
              src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
              alt="Programming code with multiple technologies and frameworks"
              class="rounded-2xl shadow-2xl"
            />
          </div>
          {/* Decorative elements */}
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-crisp-orange/20 rounded-2xl -z-10"></div>
          <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-white/20 rounded-2xl -z-10"></div>
        </div>
      </div>
    </div>
  </div>

  {/* Tech Stack Carousel */}
  <div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-crisp-green mb-6">Technologies We Master</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          We work with cutting-edge technologies and proven frameworks to deliver exceptional results. 
          Our expertise spans across the full development stack.
        </p>
      </div>
      
      <TechStackCarousel client:load />
    </div>
  </div>

  {/* Services Grid */}
  <div class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-crisp-green mb-4">Our Expertise</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Choose from our comprehensive range of digital services designed to accelerate your business growth.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
      <ServiceCard 
        client:load
        type="web-development"
        title="Web Development"
        description="Custom web applications built with modern technologies and frameworks. We create scalable, secure, and high-performance websites tailored to your business needs."
        features={[
          "Custom web application development",
          "Modern framework implementation (Astro, React, Node.js)",
          "Database design and integration",
          "API development and integration",
          "Performance optimisation"
        ]}
      />
      
      <ServiceCard 
        client:load
        type="web-design"
        title="Web Design"
        description="Beautiful, user-friendly designs that captivate your audience and drive conversions. Our design process focuses on user experience and modern aesthetics."
        features={[
          "Custom UI/UX design",
          "Responsive design for all devices",
          "Brand identity and logo design",
          "Interactive prototypes",
        ]}
      />
      
      <ServiceCard 
        client:load
        type="mobile-app"
        title="React Native App Development"
        description="Cross-platform mobile applications built with React Native. One codebase for both iOS and Android, delivering faster development, lower costs, and consistent user experience across platforms."
        features={[
          "Single codebase for iOS and Android",
          "Faster development and lower costs",
          "Native performance and user experience",
          "Easy maintenance and updates",
          "App Store deployment and optimisation"
        ]}
      />
      
      <ServiceCard 
        client:load
        type="maintenance"
        title="Website Maintenance"
        description="Ongoing support and maintenance to keep your website and applications running smoothly, secure, and up-to-date."
        features={[
          "Regular security updates and patches",
          "Performance monitoring and optimisation",
          "Content updates and feature additions",
          "Backup and disaster recovery",
          "Technical support and troubleshooting"
        ]}
      />
      
      <ServiceCard 
        client:load
        type="wordpress"
        title="WordPress Development"
        description="Complete WordPress website solutions and ongoing management services to keep your site running smoothly and securely."
        features={[
          "Complete WordPress website development",
          "Business and e-commerce site setup",
          "WordPress maintenance and updates",
          "Security monitoring and backups",
          "Content management and site optimisation"
        ]}
      />
    </div>

    {/* Process Section */}
    <div class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-crisp-green mb-4">Our Process</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            We follow a proven methodology to ensure your project is delivered on time, within budget, and exceeds expectations.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="bg-crisp-orange w-16 h-16 rounded-2xl flex items-center justify-center text-white text-2xl font-bold mx-auto mb-4">1</div>
            <h3 class="text-xl font-bold text-crisp-green mb-2">Discovery</h3>
            <p class="text-gray-600">We understand your goals, requirements, and target audience.</p>
          </div>
          <div class="text-center">
            <div class="bg-crisp-orange w-16 h-16 rounded-2xl flex items-center justify-center text-white text-2xl font-bold mx-auto mb-4">2</div>
            <h3 class="text-xl font-bold text-crisp-green mb-2">Design</h3>
            <p class="text-gray-600">Create wireframes, mockups, and prototypes for your approval.</p>
          </div>
          <div class="text-center">
            <div class="bg-crisp-orange w-16 h-16 rounded-2xl flex items-center justify-center text-white text-2xl font-bold mx-auto mb-4">3</div>
            <h3 class="text-xl font-bold text-crisp-green mb-2">Development</h3>
            <p class="text-gray-600">Build your solution using the latest technologies and best practices.</p>
          </div>
          <div class="text-center">
            <div class="bg-crisp-orange w-16 h-16 rounded-2xl flex items-center justify-center text-white text-2xl font-bold mx-auto mb-4">4</div>
            <h3 class="text-xl font-bold text-crisp-green mb-2">Launch</h3>
            <p class="text-gray-600">Deploy your project and provide ongoing support and maintenance.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  {/* Call to Action */}
  <div class="relative py-20 overflow-hidden bg-crisp-green">
    {/* Background Image */}
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" 
        alt="Team working together on digital solutions"
        class="w-full h-full object-cover object-[center_15%] opacity-30"
        loading="eager"
      />
      <div class="absolute inset-0 bg-crisp-green/80"></div>
    </div>
    
    <div class="relative z-10 text-center text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-5xl font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-xl md:text-2xl opacity-90 mb-10 max-w-3xl mx-auto">
          Let's discuss your project and find the perfect solution for your business needs. 
          Get a free consultation and discover how we can help transform your digital presence.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="/contact" class="bg-crisp-orange hover:bg-crisp-orange/90 text-white px-10 py-5 rounded-2xl font-semibold text-xl transition-colors duration-200 shadow-lg hover:shadow-xl">
            Start Your Project
          </a>
          <a href="/portfolio" class="bg-white/10 backdrop-blur-sm border-2 border-white text-white hover:bg-white hover:text-crisp-green px-10 py-5 rounded-2xl font-semibold text-xl transition-colors duration-200">
            View Our Work
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
