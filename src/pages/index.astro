---
import Layout from '../layouts/Layout.astro';
import FeaturesSection from '../components/FeaturesSection.tsx';
import ServicesPreview from '../components/ServicesPreview.tsx';
---

<Layout>
	<!-- Hero Section -->
	<div class="py-20 lg:py-24">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-16">
				<h1 class="text-4xl md:text-6xl font-bold text-crisp-green mb-6">
					Digital Solutions That <span class="text-crisp-orange">Deliver</span>
				</h1>
				<p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto mb-8">
					Transform your ideas into powerful digital experiences. We craft custom websites and applications that not only look exceptional but drive real business growth.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="/contact" class="bg-crisp-orange hover:bg-crisp-orange/90 text-white px-8 py-4 rounded-2xl font-semibold text-lg transition-colors duration-200">
						Start Your Project
					</a>
					<a href="/services" class="bg-white border-2 border-crisp-green text-crisp-green hover:bg-crisp-green hover:text-white px-8 py-4 rounded-2xl font-semibold text-lg transition-colors duration-200">
						View Our Services
					</a>
				</div>
			</div>
		</div>
	</div>

	<!-- Features Section -->
	<FeaturesSection client:load />

	<!-- Services Preview -->
	<ServicesPreview client:load />

	<!-- Stats Section -->
	<div class="py-16 bg-crisp-green text-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
				<div>
					<div class="text-4xl md:text-5xl font-bold mb-2">5+</div>
					<div class="text-xl opacity-90">Years Experience</div>
				</div>
				<div>
					<div class="text-4xl md:text-5xl font-bold mb-2">100%</div>
					<div class="text-xl opacity-90">Client Satisfaction</div>
				</div>
				<div>
					<div class="text-4xl md:text-5xl font-bold mb-2">24h</div>
					<div class="text-xl opacity-90">Response Time</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Final CTA -->
	<div class="py-16 text-center">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl md:text-4xl font-bold text-crisp-green mb-4">Ready to Transform Your Digital Presence?</h2>
			<p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
				Let's discuss your project and create something amazing together. Get in touch today for a free consultation.
			</p>
			<a href="/contact" class="bg-crisp-orange hover:bg-crisp-orange/90 text-white px-8 py-4 rounded-2xl font-semibold text-lg transition-colors duration-200">
				Get Started Today
			</a>
		</div>
	</div>
</Layout>
